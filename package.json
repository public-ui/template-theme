{
  "name": "@kern-ux-annex/theme-kolibri",
  "version": "2.3.2",
  "description": "This package contains the KERN-UX style information to make KoliBri web components look as specified by the KERN UX design system.",
  "license": "EUPL-1.2",
  "homepage": "https://www.kern-ux.de",
  "repository": {
    "type": "git",
    "url": "https://gitlab.opencode.de/kern-ux/kern-developer-kit"
  },
  "bugs": {
    "url": "https://gitlab.opencode.de/kern-ux/kern-developer-kit/-/issues"
  },
  "contributors": [
    "Axel Wolters <axel.wolters@sk.hamburg.de>",
    "Darko Pervan <darko.pervan@dataport.de>",
    "Tom Marienfeld <tom.marienfeld@dataport.de>",
    "Informationstechnikzentrum Bund <kolibri@itzbund.de>"
  ],
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "clean": "git clean -f -d -X",
    "dev": "rollup -c --watch",
    "format": "prettier --check .",
    "init-theme": "node scripts/init-theme.js",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:tsc",
    "lint:eslint": "eslint src",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:tsc": "tsc --noemit",
    "prepack": "pnpm build",
    "start": "npm-run-all2 --parallel dev serve",
    "serve": "sh serve.sh",
    "smoke-test": "pnpm clean && pnpm install && pnpm build && pnpm format && pnpm lint && pnpm unused && pnpm test",
    "test": "cross-env THEME_MODULE=dist THEME_EXPORT=MY_THEME THEME_CSS=$(pwd)/inject-assets.css kolibri-visual-test theme-snapshots.spec.js",
    "test-update": "cross-env THEME_MODULE=dist THEME_EXPORT=MY_THEME THEME_CSS=$(pwd)/inject-assets.css kolibri-visual-test --update-snapshots=changed theme-snapshots.spec.js",
    "pretest": "pnpm build",
    "pretest-update": "pnpm build",
    "unused": "knip",
    "update": "ncu -t minor -u && ncu"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.38.0",
    "@kern-ux/native": "2.3.2",
    "@playwright/test": "1.56.0",
    "@public-ui/components": "3.0.8",
    "@public-ui/visual-tests": "3.0.8",
    "@rollup/plugin-commonjs": "28.0.8",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.1.4",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "adopted-style-sheets": "1.1.9-rc.20",
    "autoprefixer": "10.4.21",
    "cross-env": "10.1.0",
    "eslint": "9.38.0",
    "knip": "5.66.1",
    "nodemon": "3.1.10",
    "npm-check-updates": "19.1.1",
    "npm-run-all2": "8.0.4",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "rollup": "4.52.5",
    "rollup-plugin-postcss": "4.0.2",
    "sass": "1.93.2",
    "stylelint": "16.25.0",
    "stylelint-config-recommended-scss": "16.0.2",
    "stylelint-config-standard": "39.0.1",
    "stylelint-order": "7.0.0",
    "stylelint-scss": "6.12.1",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@public-ui/components": "3.0.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "assets",
    "dist",
    "CONTRIBUTING.en.md",
    "CONTRIBUTING.md",
    "README.en.md",
    "README.md"
  ],
  "engines": {
    "pnpm": "^10"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
